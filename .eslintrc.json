{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:@stencil/recommended", "prettier/@typescript-eslint", "plugin:prettier/recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "@stencil/decorators-style": [
      "off",
      {
        "prop": "inline",
        "state": "inline",
        "element": "inline",
        "event": "inline",
        "method": "multiline",
        "watch": "multiline",
        "listen": "multiline"
      }
    ]
  }
}
